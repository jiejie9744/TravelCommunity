/* components/w-goods-item/w-goods-item.wxss */
.goods-item {
  
 display: flex;
  flex-wrap: wrap;
  padding: 10px 5px;
  text-align: center;
  color: #333;
  padding-bottom: 85rpx;
}
.img-vi{
  display: flex;
  
  
}
.image {
   width: 100%;
  height: 150px;
  border: 1px solid #fcfafa;
  border-radius: 5px;
  box-shadow: 0px 2px 2px gainsboro;
  box-sizing: border-box;
  
}

.desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}

.title {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}

.info {
  font-size: 26rpx;
}

.info .price {
  color: #ff5777;
 
}

.info .icon {
  width: 30rpx;
  height: 30rpx;
  padding: 0 6rpx 0 10rpx;
  position: relative;
  top:4rpx;
}

.cfav {
  
  position: relative;
}


