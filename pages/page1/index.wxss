.swp {
  height: 200px;
  width: 100%;
}

.slide-img {
  height: 200px;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}

.menu {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  border-bottom: 10px solid gainsboro;
  
}



.menu-item {
  width: 31%;
  
  padding: 25rpx 70rpx;
  box-sizing: border-box;
  justify-content: center;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.menu-img {
  display: flex;
  width: 100%;
  align-self: center;
}

.menu-mc {
  display: flex;
  font-size: 13px;
  align-self: center;
  white-space: nowrap;
  padding-top: 12px;
  font-weight: 500;
}

.tongzhi {
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  
  padding: 1px 5px;
  
  border-bottom: 18px solid gainsboro
}

.xinxi {
  display: flex;
  align-items: center;
  padding: 5px;
  border-bottom: 1px solid #f2f2f2;
  margin-bottom: 5px;
}

.xinxi-icon {
  width: 22px;
  height: 22px;
  box-shadow: 2px px 2px gainsboro;
}

.xinxi-text {
  flex-grow: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 10px;
}

.xinxi-arrow {
  width: 13px;
  height: 13px;
}

.qukuai {
  
  padding:3px 0;
  
  display: flex;
  background: aliceblue;
  align-items: center;
  
}

.huo {
  width: 22px;
  height: 22px;
  box-shadow: 2px px 2px gainsboro;
  margin-left: 20px;
}

.t01 {
  color: gray;
  flex: 1;
  text-shadow: 1px 1px 1px gainsboro;
  padding-left: 3px;
}

.m01 {
  font-size: 15px;
  color: gray;
  margin-right: 5px;
  text-shadow: 2px 2px 2px gainsboro;
  
}

.arrow{
  width: 15px;
  height: 15px;
  
}


.jingxuan {
  display: flex;
  flex-wrap: wrap;
  
  justify-content: center
}

.jingxuan-item {
  width: 42%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  margin: 10px 10px 20px 10px ;
  box-sizing: border-box;
  
  position: relative;
  background-color: black;
  border: 5rpx solid rgba(3, 3, 3, 0.8);
  border-radius: 3px;
  
  
  
  
}

.jingxuan-img {
  
  
  width: 100%;
  height: 150px;
 
  
  
  
  


  
  

}

.jingxuan-mc {
  font-size: 15px;
  
  white-space: nowrap;
  overflow: hidden;
  position: absolute;
  
  bottom:0px;
  
  width: 100%;
  color: white;
  background-color:  rgba(109, 144, 241, 0.7);
  
}
